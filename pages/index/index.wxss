}


/* rule */
.rule {
  /* width: 100%; */
  text-align: center;
  padding: 8rpx;
  border-bottom: 1px solid;
  position: absolute;
  bottom: 5%;
  left: 50%;
  transform: translate(-50%, 0);
  /* margin: 20rpx 0; */
}

.logina {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%, 0);
}


@keyframes ripple {
  0% {
    transform: scale(1.1);
    transform-origin: center;
  }

  100% {
    transform: scale(1);
    transform-origin: center;
  }
}

@keyframes sway {

  /* 0% {
    right: 10%;

  }

  100% {
    right: 5%;

  } */
  0% {
    transform: scale(1);
  }

  10%,
  20% {
    transform: scale(0.9) rotate(-3deg);
  }

  30%,
  50%,
  70%,
  90% {
    transform: scale(1.2) rotate(3deg);
  }

  40%,
  60%,
  80% {
    transform: scale(1.2) rotate(-3deg);
  }

  100% {
    transform: scale(1) rotate(0);
  }
}