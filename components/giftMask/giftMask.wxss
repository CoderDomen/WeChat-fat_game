.wrapper {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 200;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(65, 65, 65, 0.5);
  /* background-color: #676767; */

}


.content_wrapper {
  position: absolute;
  z-index: 210;
  width: 90%;
  height: calc(118rpx + 170rpx + 380rpx + 450rpx);
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: white;
  border: 4px solid #FFE372;
  /* box-shadow: 3px 3px #EC2F2B; */
  border-radius: 25rpx;
  text-align: center;
  box-sizing: border-box;
  /* overflow: hidden; */
  font-family: 'xique';


}



