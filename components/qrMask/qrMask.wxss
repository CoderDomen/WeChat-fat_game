.wrapper {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 300;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(65, 65, 65, 0.5);
  /* background-color: #676767; */
}

.qrcode {
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 100;
  transform: translate(-50%, -50%);
  width: 75%;
}

.gzhewm {
  width: 100%;
  margin-bottom: 25rpx;
}

